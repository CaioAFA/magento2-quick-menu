<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <update handle="styles" />

  <head>
    <css src="Caio_SpeedDial::css/speed_dial.css" />
    <!-- <link src="Caio_SpeedDial::js/libs/pooper.js" />
    <link src="Caio_SpeedDial::js/libs/tippy.js" /> -->
  </head>

  <body>
    <referenceContainer name="content">
      <block
        class="Caio\SpeedDial\Block\SpeedDial"
        before="-"
        name="speed-dial"
        template="Caio_SpeedDial::speed_dial.phtml"
      >
        <arguments>
          <argument name="jsLayout" xsi:type="array">
            <item name="components" xsi:type="array">
              <!-- Aqui, podemos adicionar vÃ¡rios componentes filhos -->
              <item name="speed_dial" xsi:type="array">
                <item name="component" xsi:type="string">Caio_SpeedDial/js/speed_dial</item>
                <item name="displayArea" xsi:type="string">speed_dial</item>
              </item>
            </item>
          </argument>
        </arguments>
      </block>

    </referenceContainer>
  </body>
</page>