<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">caio_speeddial_item_form.item_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Caio\SpeedDial\Block\Adminhtml\Item\Edit\BackButton" />
			<button name="delete" class="Caio\SpeedDial\Block\Adminhtml\Item\Edit\DeleteButton" />
			<button name="save" class="Caio\SpeedDial\Block\Adminhtml\Item\Edit\SaveButton" />
			<button name="save_and_continue" class="Caio\SpeedDial\Block\Adminhtml\Item\Edit\SaveAndContinueButton" />
		</buttons>
		<namespace>caio_speeddial_item_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>caio_speeddial_item_form.item_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="item_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save" />
		</settings>
		<dataProvider name="item_form_data_source" class="Caio\SpeedDial\Model\Item\DataProvider">
			<settings>
				<requestFieldName>item_id</requestFieldName>
				<primaryFieldName>item_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label />
		</settings>

		<field name="background" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">item</item>
					<item name="placeholder" xsi:type="string">Ex.: red / blue / #FFFFFF</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Background Color (CSS)</label>
				<dataScope>background</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>

		<field name="redirect_link" formElement="input" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">item</item>
					<item name="placeholder" xsi:type="string">https://google.com.br/</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Redirect To</label>
				<dataScope>redirect_link</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>

		<field name="text" formElement="input" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">item</item>
					<item name="placeholder" xsi:type="string">Google</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Text</label>
				<dataScope>text</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>

		<field name="position" formElement="input" sortOrder="50">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">item</item>
					<item name="placeholder" translate="true" xsi:type="string">The lower the number, the higher your priority</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Position</label>
				<dataScope>position</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
					<rule name="validate-number" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>

		<field name="image">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">string</item>
					<item name="source" xsi:type="string">Label </item>
					<item name="label" xsi:type="string" translate="true">Icon</item>
					<item name="visible" xsi:type="boolean">true</item>
					<item name="formElement" xsi:type="string">fileUploader</item>
					<item name="elementTmpl" xsi:type="string">Caio_SpeedDial/ui/form/element/uploader/uploader</item>
					<item name="previewTmpl" xsi:type="string">Caio_SpeedDial/image-preview</item>
					<item name="required" xsi:type="boolean">false</item>
					<item name="sortOrder" xsi:type="number">100</item>
					<item name="uploaderConfig" xsi:type="array">
						<item name="url" xsi:type="url" path="caio_speeddial/index/upload" />
					</item>
				</item>
			</argument>
		</field>
	</fieldset>
</form>